---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components'; // Use astro-icon
import Socials from '../components/Socials.astro';
import { prefixPath } from '../utils/pathUtils'; // Import prefixPath (even if not used directly in template, good for consistency)
---

<Layout 
    title="Contact Us - Clear3sixty | Let's Talk About Your Project"
   description="Get in touch with Clear3sixty to discuss your web design, SEO, custom app, or branding needs. We're here to help Ugandan businesses succeed online."
    currentPage="contact">
    <!-- Hero Section -->
    <section class="hero-gradient text-white">
        <div class="container mx-auto px-4 py-20 md:py-28 text-center">
            <h1 class="text-4xl md:text-5xl font-bold mb-6">Get in Touch</h1>
            <p class="text-lg md:text-xl max-w-2xl mx-auto opacity-90">
               We're excited to hear about your project and how we can help your business thrive online. Fill out the form below, or reach out to us directly.
            </p>
        </div>
    </section>

    <!-- Contact Form and Details Section -->
    <section class="py-16 md:py-20 bg-gray-50">
        <div class="container mx-auto px-4">
            <div class="flex flex-wrap md:flex-nowrap gap-12 lg:gap-16">

                <!-- Contact Form -->
                <div class="w-full md:w-3/5 lg:w-2/3 bg-white p-8 md:p-10 rounded-xl shadow-xl">
                    <h2 class="text-3xl font-bold text-gray-800 mb-8">Send Us a Message</h2>
                    <form action="https://formspree.io/f/meokedep" method="POST" class="space-y-6">
                        <div>
                            <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <Icon name="tabler:user" class="w-5 h-5 text-gray-400" />
                                </div>
                                <input type="text" name="name" id="name" required class="block w-full pl-10 pr-3 py-2.5 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="e.g. John Doe">
                            </div>
                        </div>

                        <div>
                            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                             <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <Icon name="tabler:mail" class="w-5 h-5 text-gray-400" />
                                </div>
                                <input type="email" name="email" id="email" required class="block w-full pl-10 pr-3 py-2.5 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="you@example.com">
                            </div>
                        </div>

                        <div>
                            <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Phone Number (Optional)</label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <Icon name="tabler:phone" class="w-5 h-5 text-gray-400" />
                                </div>
                                <input type="tel" name="phone" id="phone" class="block w-full pl-10 pr-3 py-2.5 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="+256 7XX XXX XXX">
                            </div>
                        </div>

                        <div>
                            <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">Subject</label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <Icon name="tabler:heading" class="w-5 h-5 text-gray-400" /> {/* Or tabler:abc, tabler:edit */}
                                </div>
                            <input type="text" name="subject" id="subject" required class="block w-full pl-10 pr-3 py-2.5 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="e.g. Web Design Inquiry">
                            </div>
                        </div>

                        <div>
                            <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Your Message</label>
                            <div class="relative">
                                 <div class="absolute top-3 left-0 pl-3 flex items-center pointer-events-none">
                                    <Icon name="tabler:message" class="w-5 h-5 text-gray-400" />
                                </div>
                                <textarea name="message" id="message" rows="5" required class="block w-full pl-10 pr-3 py-2.5 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="Tell us about your project or question..."></textarea>
                            </div>
                        </div>

                        <div>
                            <button type="submit" class="w-full flex items-center justify-center px-6 py-3 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition">
                                <Icon name="tabler:send" class="w-5 h-5 mr-2 -ml-1" />
                                Send Message
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Contact Details -->
                <div class="w-full md:w-2/5 lg:w-1/3">
                    <div class="bg-white p-8 md:p-10 rounded-xl shadow-xl h-full">
                        <h2 class="text-3xl font-bold text-gray-800 mb-8">Contact Information</h2>
                        <div class="space-y-6">
                            <div class="flex items-start">
                                <Icon name="tabler:map-pin" class="w-7 h-7 text-blue-600 mr-4 mt-1 flex-shrink-0" />
                                <div>
                                    <h3 class="text-lg font-semibold text-gray-700">Our Office</h3>
                                    <p class="text-gray-600">Clear3sixty Hub<br>Kampala, Uganda</p>
                                </div>
                            </div>
                            <div class="flex items-start">
                                <Icon name="tabler:phone" class="w-7 h-7 text-blue-600 mr-4 mt-1 flex-shrink-0" />
                                <div>
                                    <h3 class="text-lg font-semibold text-gray-700">Call Us</h3>
                                    <a href="tel:+256759311117" class="text-gray-600 hover:text-blue-600">+256 759 311 117</a>
                                    <p class="text-sm text-gray-500">Mon - Fri, 9am - 5pm EAT</p>
                                </div>
                            </div>
                            <div class="flex items-start">
                                <Icon name="tabler:mail" class="w-7 h-7 text-blue-600 mr-4 mt-1 flex-shrink-0" />
                                <div>
                                    <h3 class="text-lg font-semibold text-gray-700">Email Us</h3>
                                    <a href="mailto:clear3sixty@gmail.com" class="text-gray-600 hover:text-blue-600">clear3sixty@gmail.com</a>
                                    <p class="text-sm text-gray-500">We reply within 24 hours</p>
                                </div>
                            </div>
                        </div>

                        <div class="mt-10 pt-8 border-t border-gray-200">
                            <h3 class="text-lg font-semibold text-gray-700 mb-3">Connect on Social Media</h3>
                            <Socials iconSizeClass="w-8 h-8"  /> 
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>