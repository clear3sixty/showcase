---
// src/components/PortfolioSection.astro
import { ArrowRight } from "@lucide/astro";
import { Image } from "astro:assets";

// Placeholder images - you'll replace these with your actual project images
// If in src/assets, import them like:
// import portfolioImg1 from "../assets/portfolio/project1.jpg";
// import portfolioImg2 from "../assets/portfolio/project2.jpg";
// import portfolioImg3 from "../assets/portfolio/project3.jpg";

const portfolioItems = [
    {
        imageSrc: "/images/portfolio/restaurant-website.jpg", // Replace with actual path or import
        altText: "Restaurant website project",
        category: "Website Development",
        title: "City Bistro Online",
        description: "Custom website with online ordering increased customer engagement by 180%.",
        caseStudyLink: "#" // Replace with actual link
    },
    {
        imageSrc: "/images/portfolio/retail-ecommerce.jpg", // Replace with actual path or import
        altText: "Retail e-commerce project",
        category: "E-commerce",
        title: "Fashion Forward Hub",
        description: "E-commerce solution helped expand to nationwide shipping with 220% more sales.",
        caseStudyLink: "#" // Replace with actual link
    },
    {
        imageSrc: "/images/portfolio/service-branding.jpg", // Replace with actual path or import
        altText: "Service business branding project",
        category: "Branding & SEO",
        title: "ProClean Services",
        description: "New branding and targeted SEO generated 135% more service inquiries.",
        caseStudyLink: "#" // Replace with actual link
    }
];
---

<section id="portfolio" class="py-16 bg-gray-50 px-4">
    <div class="container mx-auto">
        <div class="text-center mb-16">
            <span class="text-blue-600 font-bold">OUR WORK</span>
            <h2 class="text-3xl font-bold text-gray-800 mt-2">Success Stories We've Delivered</h2>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {portfolioItems.map(item => (
                <div class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-xl transition group hover:-translate-y-1 transform duration-300">
                    <div class="relative overflow-hidden h-56">
                        <Image 
                            src={item.imageSrc} 
                            alt={item.altText} 
                            width={400} 
                            height={225} 
                            format="webp"
                            class="w-full h-full object-cover group-hover:scale-105 transform transition duration-500" 
                        />
                        <div class="absolute inset-0 bg-black/10 group-hover:bg-black/20 transition duration-300"></div>
                    </div>
                    <div class="p-6">
                        <span class="inline-block px-3 py-1 bg-blue-100 text-blue-600 rounded-full text-sm font-medium mb-3">
                            {item.category}
                        </span>
                        <h3 class="text-xl font-bold text-gray-800 mb-2">{item.title}</h3>
                        <p class="text-gray-600 mb-4 text-sm leading-relaxed h-20 overflow-hidden"> {/* Fixed height for description consistency */}
                            {item.description}
                        </p>
                        <a href={item.caseStudyLink} class="text-blue-600 font-medium hover:underline flex items-center group-hover:text-blue-700 transition">
                            View case study <ArrowRight class="ml-2 group-hover:translate-x-1 transition-transform duration-300" size={16} />
                        </a>
                    </div>
                </div>
            ))}
        </div>
        
        <div class="text-center mt-16">
            <a 
                href="#"  
                class="inline-block px-8 py-3 border-2 border-blue-600 text-blue-600 font-bold rounded-md hover:bg-blue-50 hover:border-blue-700 transition duration-300 transform hover:scale-105"
            >
                See More Success Stories
            </a>
        </div>
    </div>
</section>